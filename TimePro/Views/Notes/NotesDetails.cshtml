@model TimePro.Models.ViewModel1

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<script type="text/javascript" src="http://www.francescomalagrino.com/BootstrapPageGenerator/3/js/jquery-2.0.0.min.js"></script>
<script type="text/javascript" src="http://www.francescomalagrino.com/BootstrapPageGenerator/3/js/jquery-ui"></script>
<link href="http://www.francescomalagrino.com/BootstrapPageGenerator/3/css/bootstrap-combined.min.css" rel="chrome-webstore-item" media="screen">
<script type="text/javascript" src="http://www.francescomalagrino.com/BootstrapPageGenerator/3/js/bootstrap.min.js"></script>


<div class="row-fluid">
    <br /><br />
    <div class="col-md-12">
        <div class="row-fluid">
            <div class="col-md-2">
                @if (Model.UserModel.UserPhoto != null)
                {
                    <img width="140" height="140" class="img-circle" src=" @Url.Action("GetImage", "Users", new { Model.UserModel.UserID }) ">
                }
                else {
                    <img alt="140x140" src="~/Image/user.jpg" class="img-circle" />
                }
                <br /><br />
                <blockquote>
                    <ul class="nav nav-list">
                        <li class="nav-header">
                            <strong>我的</strong>
                        </li>
                        <li class="active">
                            <a href="~/Users/UsersIndex">首页</a>
                        </li>
                        <li>
                            <a href="~/Notes/NotesIndex">时间</a>
                        </li>
                        <li class="nav-header">
                            <strong>功能</strong>
                        </li>
                        <li>
                            <a href="~/Chats/ChatsIndex">通知</a>
                        </li>
                        <li>
                            <a href="~/Users/UsersDetails">资料</a>
                        </li>
                    </ul>
                </blockquote>
            </div>
            <br />
            <div class="col-md-10">
                <a href="~/Notes/NotesCreate" class="btn btn-large btn-success btn-default">添加项目</a>
                <br /><br />
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#">项目详情</a>
                    </li>
                    <li>
                        <a href="~/Notes/NotesAll">所有可参与的项目</a>
                    </li>
                    <li>
                        <a href="~/Notes/NotesIndex">我的项目</a>
                    </li>
                    <li>
                        <a href="~/Notes/NotesIng">正在进行的项目</a>
                    </li>
                    <li>
                        <a href="~/Notes/NotesFinish">已完成的项目</a>
                    </li>
                </ul>
                <br /><br />
                <div class="row-fluid">
                    <div class="col-md-12">
                        <div>
                            <dl class="dl-horizontal">

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteTitle)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NoteModel.NoteTitle)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteLabel)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NoteModel.NoteLabel)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteTime)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NoteModel.NoteTime)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteContent)
                                </dt>

                                <dd>
                                    @Html.Raw(@HttpUtility.HtmlDecode(@Model.NoteModel.NoteContent))
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteGetNumber)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NoteModel.NoteGetNumber)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteCreateTime)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NoteModel.NoteCreateTime)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.NoteModel.NoteFinishTime)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.NoteModel.NoteFinishTime)
                                </dd>
                            </dl>
                        </div>
                        <p>
                            
                            <a href="~/Notes/NotesIndex" class="btn btn-large btn-primary btn-default">返回</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
